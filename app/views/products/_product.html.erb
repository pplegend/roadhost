<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

<p>
  <b>Description:</b>
  <%= @product.description %>
</p>
<p>
  <b>Image:</b>
  <%= image_tag @product.image.url(:medium) %>
</p>


<table>
 <% column= @sheet.column_count %>
<% 0.upto @sheet.last_row_index do |index| %>

<tr>
<% (0..column).each do |i| %>

	<td><%= @sheet[index,i] %></td>
<% end %>
</tr>
<% end %>
</table>
